# Degen Agent Configuration

# AI Configuration - Get from Google AI Studio: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Gemini Flash Thinking Configuration
# Model must support thinking capability (gemini-2.0-flash-thinking-exp-01-21)
GEMINI_FLASH_MODEL=gemini-2.0-flash-thinking-exp-01-21

# Enable/disable Flash Thinking chain-of-thought (true/false)
GEMINI_ENABLE_THOUGHTS=true

# Temperature for thinking generation (0.0-2.0, higher = more creative)
GEMINI_THOUGHTS_TEMPERATURE=1.0

# Cost Control Configuration
# Maximum tokens per generation (includes thoughts + final answer)
COST_CONTROL_MAX_TOKENS=4000

# Maximum tokens for thoughts only (helps control costs)
COST_CONTROL_MAX_THOUGHT_TOKENS=2000

# Solana Configuration
# Use devnet for testing, mainnet for production
RPC_URL=https://api.devnet.solana.com

# EXPORT FROM PHANTOM: Settings -> Export Private Key
# IMPORTANT: Use a BURNER wallet, never your main wallet!
SOLANA_PRIVATE_KEY=your_base58_private_key_here

# Your receiving wallet address (where x402 payments go)
SERVER_WALLET=your_receiving_wallet_address_here

# Pricing Configuration (in SOL)
# Base price per analysis request
PRICE_SOL=0.001

# Premium analysis with chain-of-thought access
PEEK_PRICE=0.05

# Custom prompt injection (highest tier)
GOD_MODE_PRICE=1.0

# Server Configuration
PORT=4001
FRONTEND_URL=http://localhost:3000
AGENT_SERVER_URL=http://localhost:4001

# Integration with Frontend
PREDICTION_MARKET_PROGRAM_ID=your_program_id_here
AGENT_REGISTRY_PROGRAM_ID=your_registry_program_id_here

# Trading Simulator Configuration (for testing)
SIM_CAPITAL_USD=100
SIM_SIZING_PERCENT=0.5
SIM_IMPACT_COEFF=0.0005
SIM_FEE_RATE=0.001
SIM_DEFAULT_LIQUIDITY=20000
SIM_AUTO_APPLY_PNL=false