generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum MissionStatus {
  PENDING
  ACTIVE
  COMPLETED
  FAILED
  CANCELLED
}

enum BetStatus {
  ACTIVE
  SETTLED
  CANCELLED
}

enum BetOutcome {
  WON
  LOST
  PENDING
}

enum MarketState {
  ACTIVE
  FROZEN
  RESOLVED
}

enum MarketOutcome {
  YES
  NO
  INVALID
}

enum LogType {
  PUBLIC
  PREMIUM
}

enum AgentStatus {
  IDLE
  ACTIVE
  COMPLETED
  FAILED
}

model User {
  id            String   @id @default(uuid())
  walletAddress String   @unique
  totalWinnings Decimal  @default(0) @db.Decimal(18, 2)
  winRate       Decimal? @db.Decimal(5, 2)
  totalBets     Int      @default(0)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  bets   Bet[]
  trades Trade[]

  @@index([walletAddress])
  @@index([totalWinnings])
  @@index([winRate])
  @@index([totalBets])
}

model Agent {
  id                     String      @id @default(uuid())
  name                   String      @unique
  category               String
  url                    String // Agent server URL
  chainOfThoughtEndpoint String? // Optional chain-of-thought GET endpoint
  status                 AgentStatus @default(IDLE)
  createdAt              DateTime    @default(now())
  updatedAt              DateTime    @updatedAt

  missions Mission[]
  logs     Log[]
  stats    AgentStats?

  @@index([status])
  @@index([category])
}

model Mission {
  id          String        @id @default(uuid())
  agentId     String
  description String
  startTime   DateTime
  endTime     DateTime
  status      MissionStatus @default(PENDING)
  category    String
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  agent  Agent   @relation(fields: [agentId], references: [id], onDelete: Cascade)
  market Market?

  @@index([agentId])
  @@index([status])
  @@index([category])
}

model Market {
  id                 String         @id @default(uuid())
  missionId          String         @unique
  statement          String         @default("TBD")
  description        String?
  closesAt           DateTime       @default(now())
  moonPrice          Decimal        @default(0.5) @db.Decimal(10, 4)
  rugPrice           Decimal        @default(0.5) @db.Decimal(10, 4)
  totalVolume        Decimal        @default(0) @db.Decimal(18, 4)
  liquidity          Decimal        @default(0) @db.Decimal(18, 4)
  minBet             Decimal        @default(1) @db.Decimal(10, 4)
  maxBet             Decimal?       @db.Decimal(10, 4)
  participants       Int            @default(0)
  feeBps             Int            @default(100)
  yesMint            String?
  noMint             String?
  lpMint             String?
  poolAuthority      String?
  poolYesAccount     String?
  poolNoAccount      String?
  marketPda          String? // Solana market PDA address
  authority          String? // Wallet address that created the market
  blockchainMarketId String? // Market ID used for PDA generation
  reserveYes         Decimal        @default(0) @db.Decimal(18, 6)
  reserveNo          Decimal        @default(0) @db.Decimal(18, 6)
  state              MarketState    @default(ACTIVE)
  outcome            MarketOutcome?
  resolvedAt         DateTime?
  resolvedBy         String?
  resolutionTx       String?
  createdAt          DateTime       @default(now())
  updatedAt          DateTime       @updatedAt

  mission Mission @relation(fields: [missionId], references: [id], onDelete: Cascade)
  bets    Bet[]
  trades  Trade[]

  @@index([missionId])
  @@index([state])
  @@index([outcome])
}

model Bet {
  id           String      @id @default(uuid())
  userId       String
  marketId     String
  position     String // "MOON" or "RUG"
  shares       Int
  entryPrice   Decimal     @db.Decimal(10, 2)
  currentPrice Decimal     @db.Decimal(10, 2)
  status       BetStatus   @default(ACTIVE)
  outcome      BetOutcome? @default(PENDING)
  pnl          Decimal?    @db.Decimal(18, 2)
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  market Market @relation(fields: [marketId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([marketId])
  @@index([status])
}

model Trade {
  id        String   @id @default(uuid())
  marketId  String
  userId    String
  position  String // "MOON" or "RUG"
  shares    Int
  price     Decimal  @db.Decimal(10, 2)
  timestamp DateTime @default(now())

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  market Market @relation(fields: [marketId], references: [id], onDelete: Cascade)

  @@index([marketId])
  @@index([userId])
  @@index([timestamp])
}

model Log {
  id        String   @id @default(uuid())
  agentId   String
  type      LogType
  content   String   @db.Text
  timestamp DateTime @default(now())

  agent Agent @relation(fields: [agentId], references: [id], onDelete: Cascade)

  @@index([agentId])
  @@index([type])
  @@index([timestamp])
}

model AgentStats {
  id          String   @id @default(uuid())
  agentId     String   @unique
  currentPnL  Decimal  @default(0) @db.Decimal(18, 2)
  compute     Decimal  @default(0) @db.Decimal(5, 2) // percentage
  status      String
  lastUpdated DateTime @default(now()) @updatedAt

  agent Agent @relation(fields: [agentId], references: [id], onDelete: Cascade)

  @@index([agentId])
}
